<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spenditure.presentation.report.ViewReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_tittle_bar_height">


            <ImageView
                android:id="@+id/imageView_holder_report"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:src="@drawable/background_top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spenditure"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_holder_report"
                app:layout_constraintEnd_toEndOf="@+id/imageView_holder_report"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/imageView_holder_report"
                app:layout_constraintTop_toTopOf="@+id/imageView_holder_report"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_holder_report"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView_holder_report">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Report"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="50dp">

                    <ImageView
                        android:id="@+id/imageview_summary_report"
                        android:layout_width="0dp"
                        android:layout_height="150dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/background_light_blue" />

                    <ImageView


                        android:layout_width="70dp"

                        android:layout_height="70dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_summary_report"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.01"
                        app:layout_constraintStart_toStartOf="@+id/imageview_summary_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_summary_report"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/symbol_barplot" />

                    <ImageView


                        android:layout_width="150dp"

                        android:layout_height="150dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:alpha="0.1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageview_summary_report"
                        app:srcCompat="@drawable/symbol_banking" />

                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        app:layout_constraintBottom_toBottomOf="@+id/imageview_summary_report"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_report_summary_check"
                        app:layout_constraintTop_toTopOf="@+id/imageview_summary_report"
                        app:layout_constraintVertical_bias="0.309"
                        app:srcCompat="@drawable/symbol_check" />

                    <ImageView

                        android:id="@+id/imageView_report_summary_check"
                        android:layout_width="40dp"

                        android:layout_height="40dp"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_summary_report"
                        app:layout_constraintEnd_toStartOf="@+id/textview_summary_report_long"
                        app:layout_constraintTop_toTopOf="@+id/imageview_summary_report"
                        app:layout_constraintVertical_bias="0.681"
                        app:srcCompat="@drawable/symbol_check" />

                    <TextView
                        android:id="@+id/textview_summary_report_short"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="You've spent 15 000 CAD"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_size"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_summary_report"
                        app:layout_constraintEnd_toEndOf="@+id/imageview_summary_report"
                        app:layout_constraintHorizontal_bias="0.501"
                        app:layout_constraintStart_toStartOf="@+id/imageview_summary_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_summary_report"
                        app:layout_constraintVertical_bias="0.311" />

                    <TextView
                        android:id="@+id/textview_summary_report_long"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="You've made 500 transactions"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_size"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_summary_report"
                        app:layout_constraintEnd_toEndOf="@+id/imageview_summary_report"
                        app:layout_constraintStart_toStartOf="@+id/imageview_summary_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_summary_report"
                        app:layout_constraintVertical_bias="0.68" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="50dp">

                    <ImageView
                        android:id="@+id/imageview_customize_report"
                        android:layout_width="0dp"
                        android:layout_height="200dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/background_light_blue" />

                    <ImageView


                        android:layout_width="70dp"

                        android:layout_height="70dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_customize_report"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.01"
                        app:layout_constraintStart_toStartOf="@+id/imageview_customize_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_customize_report"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/symbol_barplot" />

                    <Spinner
                        android:id="@+id/spinner_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:pointerIcon="grabbing"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_customize_report"
                        app:layout_constraintEnd_toEndOf="@+id/imageview_customize_report"

                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/imageview_customize_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_customize_report"
                        app:layout_constraintVertical_bias="0.045" />

                    <TextView
                        android:id="@+id/textview_custom_report_short"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Mostly spending on Food"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_size"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_customize_report"
                        app:layout_constraintEnd_toEndOf="@+id/imageview_customize_report"
                        app:layout_constraintStart_toStartOf="@+id/imageview_customize_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_customize_report"
                        app:layout_constraintVertical_bias="0.37" />

                    <TextView
                        android:id="@+id/textview_custom_report_long"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Least spending on Grocery"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_size"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_customize_report"
                        app:layout_constraintEnd_toEndOf="@+id/imageview_customize_report"
                        app:layout_constraintStart_toStartOf="@+id/imageview_customize_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_customize_report"
                        app:layout_constraintVertical_bias="0.68" />



                    <ImageView

                        android:id="@+id/imageView"
                        android:layout_width="40dp"

                        android:layout_height="40dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_customize_report"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_report_summary_check_custom"
                        app:layout_constraintTop_toTopOf="@+id/imageview_customize_report"
                        app:layout_constraintVertical_bias="0.375"
                        app:srcCompat="@drawable/symbol_check" />

                    <ImageView

                        android:id="@+id/imageView_report_summary_check_custom"
                        android:layout_width="40dp"

                        android:layout_height="40dp"
                        android:layout_marginEnd="40dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageview_customize_report"
                        app:layout_constraintEnd_toStartOf="@+id/textview_custom_report_long"
                        app:layout_constraintTop_toTopOf="@+id/imageview_customize_report"
                        app:layout_constraintVertical_bias="0.687"
                        app:srcCompat="@drawable/symbol_check" />

                    <ImageView

                        android:id="@+id/imageView_check_custom"
                        android:layout_width="200dp"

                        android:layout_height="200dp"
                        android:alpha="0.1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.028"
                        app:layout_constraintStart_toStartOf="@+id/imageview_customize_report"
                        app:layout_constraintTop_toTopOf="@+id/imageview_customize_report"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/symbol_holding_dollar" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager_report"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginHorizontal="50dp"
                    />




            </LinearLayout>




        </ScrollView>
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>